<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.prabandhah.prabandhah.Ui_createEvent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appbarcolor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/custPopupstyle">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/createEvent_png_backbtn"
            android:contentDescription="TODO"
            android:src="@drawable/ic_arrow_back_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_event_title"
            android:textSize="@dimen/_15sdp"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/_26sdp"/>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:civ_border_width="0.5sp"
                android:src="@drawable/ic_eventimage"/>
            <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                      android:layout_margin="@dimen/_2sdp"
                      android:orientation="vertical">
                    <android.support.v7.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardBackgroundColor="#000"
                        app:cardCornerRadius="@dimen/_8sdp"
                         app:contentPadding="0.5sp">
                     <android.support.v7.widget.CardView
                           android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                             app:cardCornerRadius="@dimen/_8sdp"
                         app:contentPadding="@dimen/_1sdp"
                         app:cardBackgroundColor="#fff">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_of_event"
                        />
                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#000"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:contentPadding="0.5sp">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="#fff">
                            <Spinner
                                android:id="@+id/createEvent_png_eventtypeList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Spinner>
                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_datetime"
            android:textSize="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:textColor="@color/lablegreen"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/select_start_date"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:contentPadding="0.5sp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:contentPadding="@dimen/_5sdp"
                    app:cardBackgroundColor="#fff">
                    <TextView
                        android:id="@+id/strdatebtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_start_dateandtime"
                        />
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/select_end_date"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:contentPadding="0.5sp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:contentPadding="@dimen/_5sdp"
                    app:cardBackgroundColor="#fff">
                    <TextView
                        android:id="@+id/enddatebtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_start_dateandtime"
                        />
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:hint="@string/no_of_guest"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:hint="@string/buget"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:hint="@string/Address"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:hint="@string/desription_of_event"/>
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabtn_create_event"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            app:backgroundTint="@color/lablegreen"
            app:fabSize="normal"
            tools:layout_editor_absoluteX="336dp"
            tools:layout_editor_absoluteY="-72dp" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
