<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_img"
    tools:context="com.prabandhah.prabandhah.UI_Profile_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/pro_png_backbtn"
            android:contentDescription="TODO"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/companyprofile"
        app:civ_circle_background_color="#fff"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:layout_marginTop="@dimen/_10sdp"
            app:contentPadding="@dimen/_5sdp">
            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comapany Name"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:layout_marginTop="@dimen/_10sdp"
            app:contentPadding="@dimen/_5sdp">
            <EditText
                android:id="@+id/companyemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:layout_marginTop="@dimen/_10sdp"
            app:contentPadding="@dimen/_5sdp">

            <EditText
                android:id="@+id/companyAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Address"
                android:lines="5"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/saveBtn"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rac_btn"
            android:text="@string/save"/>
    </LinearLayout>

</LinearLayout>

