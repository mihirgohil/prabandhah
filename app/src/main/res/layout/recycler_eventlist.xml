<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
     <android.support.v7.widget.CardView
         android:layout_marginTop="@dimen/_1sdp"
         app:contentPadding="@dimen/_5sdp"
         android:layout_width="match_parent"
         android:id="@+id/cardview"
         app:cardCornerRadius="@dimen/_5sdp"
         android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <CheckBox
                 android:id="@+id/ckb"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/_5sdp"
                 android:visibility="gone"
                 />

             <de.hdodenhof.circleimageview.CircleImageView
                 android:layout_width="@dimen/_60sdp"
                 android:layout_height="@dimen/_60sdp"
                 android:src="@drawable/logocom" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">
                     <TextView
                         android:id="@+id/nameofevent"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Name"
                         android:textSize="@dimen/_15sdp" />
                 </LinearLayout>
                 <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/end_date" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_end_date"
                            android:id="@+id/enddate" />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_marginLeft="@dimen/_10sdp"
                         android:layout_height="wrap_content"
                         android:text="@string/time1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_end_date"
                            android:id="@+id/endtime" />
                    </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/event_manager"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/eventmanagername" />
                 </LinearLayout>
                 <android.support.v7.widget.AppCompatSpinner
                     android:visibility="gone"
                     android:layout_width="match_parent"
                     android:entries="@array/forrecylevieweventstatus"
                     android:id="@+id/statusspiner"
                     android:layout_height="wrap_content">
                 </android.support.v7.widget.AppCompatSpinner>
                 <TextView
                     android:visibility="gone"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="status"
                     android:id="@+id/txtstatus"/>

             </LinearLayout>
         </LinearLayout>
     </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>